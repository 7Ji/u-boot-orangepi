

include $(SPLDIR)/config.mk
include $(TOPDIR)/include/autoconf.mk
include $(TOPDIR)/include/autoconf.mk.dep


export ARCH CPU BOARD SOC

MAKEFLAGS +=  --no-print-directory
include $(SPLDIR)/config.mk

all:


spl_lib: $(TIMESTAMP_FILE) $(VERSION_FILE)
		@echo $(ARCH) $(CPU) $(BOARD) $(SOC)
		@echo nand=$(CONFIG_STORAGE_MEDIA_NAND) mmc=$(CONFIG_STORAGE_MEDIA_MMC) nor=$(CONFIG_STORAGE_MEDIA_SPINOR)
		$(MAKE)  -C  $(SPLDIR)/spl all

ifdef CONFIG_SUPPORT_DDR4

fes:
		$(MAKE) -C $(SPLDIR)/fes_init all
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/fes_init/fes1_ddr3.bin fes1_ddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/fes_init/fes1_lpddr3.bin fes1_lpddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/fes_init/fes1_ddr4.bin fes1_ddr4.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/fes_init/fes1_lpddr4.bin fes1_lpddr4.bin > /dev/null

boot0:
		$(MAKE)  -C  $(SPLDIR)/boot0 all
ifdef CONFIG_STORAGE_MEDIA_NAND
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_nand_ddr3.bin boot0_nand_ddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_nand_lpddr3.bin boot0_nand_lpddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_nand_ddr4.bin boot0_nand_ddr4.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_nand_lpddr4.bin boot0_nand_lpddr4.bin > /dev/null
endif
ifdef CONFIG_STORAGE_MEDIA_MMC
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_sdcard_ddr3.bin boot0_sdcard_ddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_sdcard_lpddr3.bin boot0_sdcard_lpddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_sdcard_ddr4.bin boot0_sdcard_ddr4.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_sdcard_lpddr4.bin boot0_sdcard_lpddr4.bin > /dev/null
endif
ifdef CONFIG_STORAGE_MEDIA_SPINOR
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_spinor_ddr3.bin boot0_spinor_ddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_spinor_lpddr3.bin boot0_spinor_lpddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_spinor_ddr4.bin boot0_spinor_ddr4.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_spinor_lpddr4.bin boot0_spinor_lpddr4.bin > /dev/null
endif
sboot:
		$(MAKE) -C $(SPLDIR)/sbrom all
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/sbrom/sboot_ddr3.bin sboot_ddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/sbrom/sboot_lpddr3.bin sboot_lpddr3.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/sbrom/sboot_ddr4.bin sboot_ddr4.bin > /dev/null
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/sbrom/sboot_lpddr4.bin sboot_lpddr4.bin > /dev/null

else # the ddr3 build

fes:
		$(MAKE) -C $(SPLDIR)/fes_init all
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/fes_init/fes1.bin fes1.bin > /dev/null

boot0:
		$(MAKE)  -C  $(SPLDIR)/boot0 all
ifdef CONFIG_STORAGE_MEDIA_NAND
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_nand.bin boot0_nand.bin > /dev/null
endif
ifdef CONFIG_STORAGE_MEDIA_MMC
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_sdcard.bin boot0_sdcard.bin > /dev/null
endif
ifdef CONFIG_STORAGE_MEDIA_SPINOR
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/boot0/boot0_spinor.bin boot0_spinor.bin > /dev/null
endif
sboot:
		$(MAKE) -C $(SPLDIR)/sbrom all
		@$(TOPDIR)/tools/gen_check_sum $(SPLDIR)/sbrom/sboot.bin sboot.bin > /dev/null

endif

spl:    boot0

mkdepend :


depend:

#
# Auto-generate the autoconf.mk file (which is included by all makefiles)
#
# This target actually generates 2 files; autoconf.mk and autoconf.mk.dep.
# the dep file is only include in this top level makefile to determine when
# to regenerate the autoconf.mk file.


$(SPLDIR)/autoconf.mk: $(obj)include/config.h $(obj)include/configs/$(SOC).h
	@echo Generating $@ ; \
    set -e ; \
    : Extract the config macros ; \
    $(CPP) $(ALL_CFLAGS) -DDO_DEPS_ONLY -dM $(SRCTREE)/include/common.h > $@.tmp && \
	sed -n -f $(SRCTREE)/tools/scripts/define2mk.sed $@.tmp > $@; \
	rm $@.tmp

